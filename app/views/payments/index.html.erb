<h1>Payments</h1>

<%= link_to "New Payment", new_payment_path%>

<table class="table">
    <thead>
        <tr>
            <td>Rental</td>
            <td>Amount</td>
            <td>Payment Date</td>
            <td>Payment Method</td>
            <td>Status</td>
        </tr>
    </thead>
    <tbody>
        <% @payments.each do |payment|%>
        <tr>
            <td><%= payment.rental_id%></td>
            <td><%= number_to_currency(payment.amount) %></td>
            <td><%= payment.payment_date.strftime("%d/%m/%Y") %></td>
            <td><%= payment.payment_method.humanize %></td>
            <td><%= payment.status.humanize %></td>
        </tr>
        <%end%>
    </tbody>