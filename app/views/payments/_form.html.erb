<%= form_with(model: [@rental, @payment], local: true) do |form| %>
  <% if @payment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@payment.errors.count, "error") %> prohibited this payment from being saved:</h2>
      <ul>
        <% @payment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :amount %>
    <%= form.number_field :amount, value: @rental.total_value, step: 0.01 %>
  </div>

  <div class="field">
    <%= form.label :payment_date %>
    <%= form.date_field :payment_date %>
  </div>

  <div class="field">
    <%= form.label :payment_method %>
    <%= form.select :payment_method, Payment.payment_methods.keys.map { |method| [method.humanize, method] } %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, Payment.statuses.keys.map { |status| [status.humanize, status] } %>
  </div>

  <div class="actions">
    <%= form.submit "Create Payment" %> 
  </div>
  <% end %>