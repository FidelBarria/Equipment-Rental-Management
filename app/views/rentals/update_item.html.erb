<h1>Add items on rental <%= @rental.event.name %></h1>

<%= form_with model: @rental_item, url: edit_item_rental_path(@rental), method: :put do |f| %>
    <div class="form-group">
        <%= f.label :item_id, "Item" %>
        <%= f.collection_select :item_id, Equipment.all, :id, :name, { class: "form-control" } %>
    </div>

    <div class="form-group">
        <%= f.label :quantity, "Quantity" %>
        <%= f.number_field :quantity, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :daily_price, "Daily Price" %>
        <%= f.number_field :daily_price, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :subtotal, "Subtotal" %>
        <%= f.number_field :subtotal, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :rental_id, "Rental ID" %>
        <%= f.text_field :rental_id, value: @rental.id, class: "form-control", readonly: true %>
    </div>

    <%= f.submit "Add Item", class: "btn btn-primary" %>
<% end %>