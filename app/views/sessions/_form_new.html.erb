
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h6 class="modal-title text-customized">CADASTRO</h6>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        
<%= form_with model: user do |form|%>
    <% if user.errors.any? %>
        <div class="alert alert-danger">
            <ul>
                <% user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <div class="d-flex justify-content-center align-items-center">
        <div class="form-floating w-50 mb-3">
        <%= form.text_field :name, class: "form-control", id: "floatingInput", placeholder: "Name"%>
        <label for="floatingPassword">Name</label>
        </div>
        </div>
        <div class="d-flex justify-content-center align-items-center">
        <div class="form-floating w-50 mb-3">
        <%= form.text_field :user, class: "form-control", id: "floatingInput", placeholder: "User"%>
        <label for="floatingPassword">User</label>
        </div>
        </div>
        <div class="d-flex justify-content-center align-items-center">
        <div class="form-floating w-50 mb-3">
        <%= form.text_field :email, class: "form-control", id: "floatingInput", placeholder: "Email"%>
        <label for="floatingPassword">Email</label>
        </div>
        </div>
        <div class="d-flex justify-content-center align-items-center">
        <div class="form-floating w-50 mb-3">
        <%= form.password_field :password, class: "form-control", id: "floatingInput", placeholder: "Password"%>
        <label for="floatingPassword">Password</label>
        </div>
        </div>
        <div class="d-flex justify-content-center align-items-center">
        <div class="form-floating w-50 mb-3">
        <%= form.password_field :password_confirmation, class: "form-control", id: "floatingInput", placeholder: "Confirm your password"%>
        <label for="floatingPassword">Confirm your password</label>
        </div>
        </div>
        <div class="d-flex justify-content-center align-items-center">
            <div class="modal-footer w-50">
                <div class="input-group w-100">
                    <%= form.submit "Salvar", class:"btn btn-primary"%>
                </div>
            </div>
 <%end%>
        </div>
        </div>
      </div>
    </div>
  </div>