<h1>Welcome to the Equipment Rental Management System</h1>
<h2>Login-in to access the system</h2>
<%= form_with url: login_path do |form| %>
    <% if flash[:notice] %>
        <div class="alert alert-success">
        <%= flash[:notice] %>
        </div>
    <% end %>

    <% if flash[:alert] %>
        <div class="alert alert-danger">
        <%= flash[:alert] %>
        </div>
    <% end %>
    <%= form.label :user, "User:" %>
    <%= form.text_field :user %>

    <%= form.label :password, "Password:" %>
    <%= form.password_field :password %>

     <%= form.submit "Login" %>
<% end %>