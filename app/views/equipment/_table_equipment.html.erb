<table class="table">
  <thead>
    <tr>
        <th>ID Equipment</th>
        <th>Name</th>
        <th>Category</th>
        <th>Daily Value</th>
        <th>Status</th>
        <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @equipment.each do |equipment| %>
      <tr>
        <td><%= equipment.id %></td>
        <td><%= equipment.name %></td>
        <td><%= equipment.category.name %></td>
        <td><%= equipment.daily_value %></td>
        <td><%= equipment.status&.humanize %></td>
        <td><%= link_to "Details", equipment, class: "button-group" %></td>
      </tr>
    <% end %>
  </tbody>