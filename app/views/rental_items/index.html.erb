<h1>Rental Items</h1>

<%= link_to "New Rental Item", new_rental_item_path%>

<table class="table">
    <thead>
        <tr>
            <td>Equipment</td>
            <td>Rental</td>
            <td>Quantity</td>
            <td>Daily Price</td>
            <td>Subtotal</td>
        </tr>
    </thead>
    <tbody>
        <% @rental_items.each do |rental_item|%>
        <tr>
            <td><%= rental_item.equipment.name%></td>
            <td><%= rental_item.rental.event.name%></td>
            <td><%= rental_item.quantity %></td>
            <td><%= rental_item.daily_price %></td>
            <td><%= rental_item.subtotal %></td>
        </tr>
        <%end%>
    </tbody>